@require '../tools/mixins'

$circle
    $size = var(--circleSize)
    display inline-flex
    align-items center
    justify-content center
    border-radius 50%
    overflow hidden
    background-color var(--dodgerBlue)
    color var(--white)
    width $size
    height $size
    min-width $size
    min-height $size
    font-size 'calc(%s / 2.28)' % $size

$circle-text
    font-weight bold
    line-height 1
