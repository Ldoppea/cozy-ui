@require 'settings/palette'
@require 'settings/breakpoints'
@require 'tools/mixins'
@require 'settings/spaces'

.Infos
    position relative
    border-radius 8px
    padding spacing_values.m spacing_values.l

    +mobile()
        padding spacing_values.s spacing_values.m

    &.Infos--primary
        background-color var(--primaryColorLightBackground)

    &.Infos--secondary
        background-color var(--neutralBackground)

    &.Infos--danger
        background-color var(--errorBackground)

.Infos-description
    max-width 32rem

.Info-close
    position absolute
    top spacing_values.xs
    right spacing_values.xs
    padding spacing_values.s
    cursor pointer
    border 0
    background transparent
