@require 'settings/breakpoints.styl'

.DialogCloseButton
    top 0.8125rem
    right 1.5rem
    background-color transparent
    margin 0
    padding 0
    width 3rem
    height 3rem
    position absolute
    border 0
    cursor pointer

+small-screen()
    .DialogCloseButton
        top 0rem
        right 0.5rem

.DialogTitle
    margin-top -1.5rem // Cancels padding of the dialog
    height 4rem // Should match with the DialogCloseButton size so that cross and title are centered

+small-screen()
    .DialogTitle
        margin-top -1rem
        height 3rem
